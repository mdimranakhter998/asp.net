@{
    ViewData["Title"] = "Edit Gender";
}
@model Ecommerce.ModelAccessLayer.Admin.Models.User.GenderModel;
<section>
    <div class="container mt-5">
        <div class="d-flex justify-content-end mb-3">
            <a asp-route="GenderList" class="btn btn-dark btn-sm" role="button">Back To List</a>
        </div>
        <div class="mb-3">
            <h5>Edit Gender</h5>
        </div>
        

        <hr />
        <form class="pt-3"  asp-route="EditGender" method="post">
            @Html.AntiForgeryToken()
            <div class="row mb-4">
                <div class="col-3 text-center">
                    <label asp-for="GenderType" class="form-label fw-bold">Gender <span class="text-danger">*</span> <span>:</span></label>
                </div>
                <div class="col-6">
                    <input asp-for="GenderId" type="hidden"/>
                    <input asp-for="GenderType" class="form-control">
                      <span asp-validation-for="GenderType" class="text-danger"></span>
                </div>

            </div>
            <div class="row mb-3 d-flex justify-content-center">
                <div class="col-3 col-md-2">
                    <button type="submit" class="btn btn-success mb-3 col-12tn-sm b">Add</button>
                </div>

            </div>
        </form>

    </div>
</section>

@{
    ViewData["Title"] = "AddUserStatus";
}
@model Ecommerce.ModelAccessLayer.Admin.Models.User.UserStatusModel;
<section>
    <div class="container col-sm-7 mt-5">

        <div class="d-flex justify-content-end mb-3">
            <a asp-route="UserStatusList" class="btn btn-dark btn-sm" role="button">Back To List</a>
        </div>
        <div class="mb-3">
            <h5>Add UserStatus</h5>
        </div>

        <hr />
        <form class="pt-3" asp-route="/add/" method="post">
            @Html.AntiForgeryToken()
            <div class="row mb-4">
                <div class="col-3 text-center">
                    <label asp-for="UserStatus" class="form-label fw-bold">User Status <span class="text-danger">*</span> <span>:</span></label>
                </div>
                <div class="col-6">
                    <input asp-for="UserStatus" class="form-control">
                    <span asp-validation-for="UserStatus"></span>
                </div>

            </div>
            <div class="row mb-3 d-flex justify-content-center">
                <div class="col-3 col-md-2">
                    <button type="submit" class="btn btn-success btn-sm mb-3 col-12">Add</button>
                </div>
            </div>
        </form>
    </div>
</section>
